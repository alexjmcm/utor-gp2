<h2>
    You are logged in as user ID: {{user.id}}
</h2>

<h2>Chart</h2>
<div id="chart-weight">
    <img src="https://via.placeholder.com/350x150">
</div>

<h2>Data</h2>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>date</th>
                <th>gender</th>
                <th>age</th>
                <th>weight_lb</th>
                <th>height_in</th>
                <th>act_lvl</th>
                <th>fat_pct</th>
                <th>cal_deficit</th>
                <th>net_carbs</th>

            </tr>
        </thead>
        <tbody>
            {{#each user.Logs}}
                <tr>
                    <td>{{{entry_date}}}</td>
                    <td>{{{gender}}}</td>
                    <td>{{{age}}}</td>
                    <td>{{{weight_lb}}}</td>
                    <td>{{{height_in}}}</td>
                    <td>{{{act_lvl}}}</td>
                    <td>{{{fat_pct}}}</td>
                    <td>{{{cal_deficit}}}</td>
                    <td>{{{net_carbs}}}</td>
                </tr>
            {{/each}}

        </tbody>
    </table>
</div>

<span data-toggle="modal" data-target="#modal-add-entry">
    <button class="btn btn-primary btn-sm" data-toggle="tooltip" data-trigger="hover" data-placement="top" title="Add new entry"><i
            class="fas fa-user-plus"></i></button></span>

<div id="modal-add-entry" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><strong>Add a New Entry!</strong></h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">

                <form id="form-add-entry">
                    <fieldset class="form-group">
                        <div class="row">
                            <legend class="col-form-label col-sm-2 pt-0">Gender</legend>
                            <div class="col-sm-10">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="radio-gender" id="gridRadios1"
                                        value="M">
                                    <label class="form-check-label" for="gridRadios1">
                                        Male
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="radio-gender" id="gridRadios2"
                                        value="F">
                                    <label class="form-check-label" for="gridRadios2">
                                        Female
                                    </label>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                    <div class="form-group row">
                        <label for="input-age" class="col-sm-2 col-form-label">Age</label>
                        <div class="col-sm-10">
                            <input type="number" min="18" step="1" class="form-control" id="input-age" placeholder="Age"
                                value="18">
                        </div>

                    </div>
                    <div class="form-group row">
                        <label for="input-weight" class="col-sm-2 col-form-label">Weight</label>
                        <div class="col-sm-6">
                            <input type="number" min="1" class="form-control" id="input-weight" placeholder="Weight">
                        </div>
                        <div class="col-sm-4">
                            <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
                                <div class="btn-group mr-2" role="group" aria-label="Basic example">
                                    <button type="button" class="btn btn-primary weight-unit">lbs</button>
                                </div>
                                <div class="btn-group" role="group" aria-label="Basic example">
                                    <button type="button" class="btn btn-primary weight-unit">kg</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="input-height" class="col-sm-2 col-form-label">Height</label>
                        <div class="col-sm-6">
                            <input type="number" min="1" class="form-control" id="input-height" placeholder="Height">
                        </div>
                        <div class="col-sm-4">
                            <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
                                <div class="btn-group mr-2" role="group" aria-label="Basic example">
                                    <button type="button" class="btn btn-primary height-unit">in</button>
                                </div>
                                <div class="btn-group" role="group" aria-label="Basic example">
                                    <button type="button" class="btn btn-primary height-unit">cm</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="input-activity" class="col-sm-2 col-form-label">Activity Level</label>
                        <div class="col-sm-10">
                            <select class="form-control" id="input-activity">
                                <option value="1.2">1.2: Little to no exercise</option>
                                <option value="1.375">1.375: Light exercise 1–3 days per week</option>
                                <option value="1.55" selected>1.55: Moderate exercise 3–5 days per week</option>
                                <option value="1.725">1.725: Hard exercise 6–7 days per week</option>
                                <option value="1.9">1.9: Very intense exercise</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="input-fat" class="col-sm-2 col-form-label">Body Fat (%)</label>
                        <div class="col-sm-10">
                            <input type="number" step="1" min="2" max="50" class="form-control" id="input-fat"
                                placeholder="%" value="15">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="input-caloric-def" class="col-sm-2 col-form-label">Caloric Deficit (%)</label>
                        <div class="col-sm-10">
                            <input type="number" step="1" min="0" max="30" class="form-control" id="input-caloric-def"
                                placeholder="%" value="10">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="input-net-carbs" class="col-sm-2 col-form-label">Daily Net Carbs (g)</label>
                        <div class="col-sm-10">
                            <select class="form-control" id="input-net-carbs">
                                <option value="20">20 g</option>
                                <option value="25" selected>25 g</option>
                                <option value="30">30 g</option>
                            </select>
                        </div>
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" id="btn-new-entry">Submit</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

<script src="/js/profile.js"></script>