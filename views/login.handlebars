<div id="login">
    <div class="container">
        <div class="jumbotron">
            <h2>Login to KetoFu</h2>
            <br>
            <form id="form-login" action="/login" method="POST">
                <div class="form-group">
                    <label for="input-email">Email</label>
                    <input type="email" class="form-control" name="email" id="input-email" placeholder="Enter email"
                        value="a@a.com" required>
                </div>
                <div class="form-group">
                    <label for="input-password">Password</label>
                    <input type="password" class="form-control" name="password" id="input-password" placeholder="Password"
                        value="Abcd1234" required>
                </div>
                <a href="/register" class="float-left alert-link">Register for a new account</a>
                <button id="btn-login" type="submit" class="btn btn-primary float-right">Login</button>
            </form>
        </div>
    </div>
</div>

<footer>
    {{> footer}}
</footer>

{{> scriptTags}}
<script src="/js/login.js"></script>